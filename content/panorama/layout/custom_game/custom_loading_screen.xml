<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/game_setup/game_setup.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/layout/custom_game/game_setup/game_setup.js" />
	</scripts>

	<Panel style="width:100%; height:100%;" hittest="false">
		<Panel id="Container" hittest="true" >
			<Label id="Header" text="GAME OPTIONS" />

			<Panel class="OptionContainer" id="lock_camera_container">
				<ToggleButton class="OptionToggleButton" id="lock_camera" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Lock Camera to Hero"/>
			</Panel>

			<Panel class="OptionContainer" id="smash_mode_container">
				<ToggleButton class="OptionToggleButton" id="smash_mode" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Smash Bros scoring system"/>
			</Panel>

			<Panel class="OptionContainer" id="extra_powerups_container">
				<ToggleButton class="OptionToggleButton" id="extra_powerups" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Enable experimental powerups"/>
			</Panel>

		</Panel>
	</Panel>
</root>
