<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/game_setup/game_setup.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/layout/custom_game/game_setup/game_setup.js" />
	</scripts>

	<Panel style="width:100%; height:100%;" hittest="false">
		<Panel id="Container" hittest="true" >
			<Label id="Header" text="GAME OPTIONS" />

			<Panel class="OptionContainer" id="camera_lock_container">
				<ToggleButton class="OptionToggleButton" id="camera_lock" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Lock camera"/>
			</Panel>

			<Panel class="OptionContainer" id="hard_mode_container">
				<ToggleButton class="OptionToggleButton" id="hard_mode" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Enable HARD MODE"/>
			</Panel>

			<Panel class="OptionContainer" id="nightmare_mode_container">
				<ToggleButton class="OptionToggleButton" id="nightmare_mode" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Enable NIGHTMARE MODE"/>
			</Panel>

<!-- 			<Panel class="OptionContainer" id="fast_abilities_container">
				<ToggleButton class="OptionToggleButton" id="fast_abilities" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Shorter cooldowns"/>
			</Panel>

			<Panel class="OptionContainer" id="faster_abilities_container">
				<ToggleButton class="OptionToggleButton" id="faster_abilities" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Even shorter cooldowns"/>
			</Panel> -->
		</Panel>
	</Panel>
</root>
