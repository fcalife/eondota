<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/game_setup/game_setup.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/layout/custom_game/game_setup/game_setup.js" />
	</scripts>

	<Panel style="width:100%; height:100%;" hittest="false">
		<Panel id="Container" hittest="true" >
			<Label id="Header" text="GAME OPTIONS" />

			<Panel class="OptionContainer" id="reverse_ctf_container">
				<ToggleButton class="OptionToggleButton" id="reverse_ctf" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Reverse CTF"/>
			</Panel>

			<Panel class="OptionContainer" id="towers_container">
				<ToggleButton class="OptionToggleButton" id="enable_towers" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Enable Towers"/>
			</Panel>

			<Panel class="OptionContainer" id="creeps_container">
				<ToggleButton class="OptionToggleButton" id="enable_creeps" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Enable Creeps"/>
			</Panel>

			<Panel class="OptionContainer" id="fog_container">
				<ToggleButton class="OptionToggleButton" id="disable_fog" onactivate="UpdateOptions()"/>
				<Label class="OptionLabel" text="Remove Fog of War"/>
			</Panel>
		</Panel>
	</Panel>
</root>
