<root>
	<styles>
		<include src="file://{resources}/layout/custom_game/role_choice/role_choice.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/layout/custom_game/role_choice/role_choice.js" />
	</scripts>

	<Panel style="width:100%; height:100%;" hittest="false">
		<Panel id="Container" hittest="true" >
			<Label id="Header" text="SELECT A STRUCTURE TO BUILD" />
			<Label id="Subheader" text="All effects fully stack with each other" />

			<Panel id="ChoiceReel">
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Soup Cauldron" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_building_regen" onmouseover="DOTAShowAbilityTooltip(ability_building_regen)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectBuilding('regen')" />
				</Panel>
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Rain of Gold" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_building_gold" onmouseover="DOTAShowAbilityTooltip(ability_building_gold)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectBuilding('gold')" />
				</Panel>
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Overcharger" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_building_damage" onmouseover="DOTAShowAbilityTooltip(ability_building_damage)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectBuilding('damage')" />
				</Panel>
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Azure Dragon" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_building_defense" onmouseover="DOTAShowAbilityTooltip(ability_building_defense)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectBuilding('defense')" />
				</Panel>
			</Panel>

			<Panel id="CancelButton" onactivate="CloseBuildingMenu()">
				<Label id="CancelButtonLabel" text="CANCEL" />
			</Panel>
		</Panel>
	</Panel>
</root>
