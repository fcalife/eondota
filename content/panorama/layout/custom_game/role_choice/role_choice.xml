<root>
	<styles>
		<include src="file://{resources}/layout/custom_game/role_choice/role_choice.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/layout/custom_game/role_choice/role_choice.js" />
	</scripts>

	<Panel style="width:100%; height:100%;" hittest="false">
		<Panel id="OuterContainer" hittest="true" >
			<Panel class="CloseButton" onmouseactivate="ToggleMenu()" >
				<Label text="Toggle debug menu" />
			</Panel>

			<Panel id="MenuContainer" hittest="true" >

				<Label id="FirstHeader" class="DebugMenuHeader" text="Fight controls" />

				<Panel class="OptionButton" onmouseactivate="ResetFight()" >
					<Label text="Reset Fight" />
				</Panel>
				<Panel class="OptionButton" onmouseactivate="AdvancePhase()" >
					<Label text="Advance to next phase" />
				</Panel>
				<Panel class="OptionButton" onmouseactivate="HealAll()" >
					<Label text="Heal all heroes" />
				</Panel>
				<Panel class="OptionButton" onmouseactivate="GodMode()" >
					<Label text="Toggle god mode" />
				</Panel>
				<Panel class="InputButtonSide" >
					<Label text="Player health" />
					<TextEntry id="PlayerHealthInput" class="TextInput" maxchars="5" text="1600" oninputsubmit="SetPlayerHealth()" />
				</Panel>

				<Label class="DebugMenuSecondHeader" text="Eon Sphere ruleset" />
				<Label class="DebugMenuSubheader" text="(those reset the fight when pressed)" />

				<Panel class="OptionButton" onmouseactivate="SetSphereSourceHealth()" >
					<Label text="Drops based on health" />
				</Panel>
				<Panel class="OptionButton" onmouseactivate="SetSphereSourceWeakPoint()" >
					<Label text="Boss weak point" />
				</Panel>
				<Panel class="OptionButton" onmouseactivate="SetSphereSourceMap()" >
					<Label text="Periodic map spawn" />
				</Panel>

				<Label class="DebugMenuSecondHeader" text="Eon Sphere bonuses" />
				<Label class="DebugMenuSubheader" text="(input and press enter to update)" />

				<Panel class="InputButton" >
					<Label text="1st sphere speed bonus (%)" />
					<TextEntry id="FirstSphereInput" class="TextInput" maxchars="3" text="20" oninputsubmit="SetFirstSphereMoveSpeed()" />
				</Panel>

				<Panel class="InputButton" >
					<Label text="2nd sphere health regen bonus" />
					<TextEntry id="SecondSphereInput" class="TextInput" maxchars="3" text="10" oninputsubmit="SetSecondSphereRegen()" />
				</Panel>

				<Panel class="InputButton" >
					<Label text="3rd sphere shield amount" />
					<TextEntry id="ThirdSphereInput" class="TextInput" maxchars="4" text="500" oninputsubmit="SetThirdSphereShieldAmount()" />
					<Label class="SecondaryInputLabel" text="shield recharge time (s)" />
					<TextEntry id="ThirdSphereCooldownInput" class="TextInput" maxchars="3" text="15" oninputsubmit="SetThirdSphereShieldCooldown()" />
				</Panel>

				<Panel class="InputButton" >
					<Label text="4th sphere nuke damage" />
					<TextEntry id="FourthSphereInput" class="TextInput" maxchars="4" text="300" oninputsubmit="SetFourthSphereDamage()" />
				</Panel>

				<Panel class="InputButton" >
					<Label text="5th sphere power factor" />
					<TextEntry id="FifthSphereInput" class="TextInput" maxchars="2" text="2" oninputsubmit="SetFifthSphereFactor()" />
				</Panel>

			</Panel>
		</Panel>
	</Panel>
</root>
