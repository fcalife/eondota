					<Label class="ChoiceCost" id="label_nexus_2" text="700" />
				</Panel>
				<Panel class="Choice" id="choice_tech_2" >
					<DOTAAbilityImage class="ChoiceIcon" abilityname="upgrade_tech_2" onmouseover="DOTAShowAbilityTooltip(upgrade_tech_2)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="TryToUpgrade('tech_2')" />
					<Label class="ChoiceCost" id="label_tech_2" text="1000" />
				</Panel>
				<Panel class="Choice" id="choice_creeps_3" >
					<DOTAAbilityImage class="ChoiceIcon" abilityname="upgrade_creeps_3" onmouseover="DOTAShowAbilityTooltip(upgrade_creeps_3)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="TryToUpgrade('creeps_3')" />
					<Label class="ChoiceCost" id="label_creeps_3" text="800" />
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
