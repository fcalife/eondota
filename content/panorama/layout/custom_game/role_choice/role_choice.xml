<root>
	<styles>
		<include src="file://{resources}/layout/custom_game/role_choice/role_choice.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/layout/custom_game/role_choice/role_choice.js" />
	</scripts>

	<Panel style="width:100%; height:100%;" hittest="false">
		<Panel id="Container" hittest="true" >
			<Label id="Header" text="PICK YOUR HERO'S ROLE" />

			<Panel id="ChoiceReel">
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Charger" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_ball_charger" onmouseover="DOTAShowAbilityTooltip(ability_ball_charger)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectRole('charger')" />
				</Panel>
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Runner" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_ball_runner" onmouseover="DOTAShowAbilityTooltip(ability_ball_runner)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectRole('runner')" />
				</Panel>
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Interceptor" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_ball_blocker" onmouseover="DOTAShowAbilityTooltip(ability_ball_blocker)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectRole('blocker')" />
				</Panel>
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Quarterback" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_ball_thrower" onmouseover="DOTAShowAbilityTooltip(ability_ball_thrower)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectRole('thrower')" />
				</Panel>
				<Panel class="Choice">
					<Label class="ChoiceHeader" text="Forcer" />
					<DOTAAbilityImage class="ChoiceIcon" abilityname="ability_ball_forcer" onmouseover="DOTAShowAbilityTooltip(ability_ball_forcer)"
						onmouseout="DOTAHideAbilityTooltip()" onactivate="SelectRole('forcer')" />
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
